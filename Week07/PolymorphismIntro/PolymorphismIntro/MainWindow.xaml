<Window x:Class="PolymorphismIntro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InheritanceIntro"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="300">
    <StackPanel>
        <ListView x:Name="lvAnimals" Height="395">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="200" Header="Name" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Width="90" Header="Height" DisplayMemberBinding="{Binding Height}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Click="SayName_Button_Click" Content="Say Name"/>
    </StackPanel>
</Window>
